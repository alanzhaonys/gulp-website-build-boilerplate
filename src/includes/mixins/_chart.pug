mixin chart(name, title, url, mobileUrl, alt = 'Chart', addtlClass = '')
  .row(id=name class="chart fade-in-on-scroll " + addtlClass)
    .col.col-12
      .row
        .col.col-12.d-flex.justify-content-center.align-items-center
          p.chart-header.text-uppercase!= title
      .row
        .col.col-12.d-flex.justify-content-center.align-items-center                
          img.chart-img.d-none.d-lg-block.lozad(data-src=url alt=alt title=alt) 
          img.chart-img-mb.d-block.d-lg-none.lozad(data-src=mobileUrl alt=alt title=alt)

      a.button.zoom-chart.d-lg-none(href="#" onclick="return false" data-target=name) ZOOM IN
